{
    "apiVersion": "rbac.authorization.k8s.io/v1",
    "kind": "Role",
    "metadata": {
        "name": "pgo-target-role",
        "namespace": "{{.TargetNamespace}}"
    },
    "rules": [
        {
            "apiGroups": [
                "crunchydata.com"
            ],
            "resources": [
                "pgclusters",
                "pgpolicies",
                "pgtasks",
                "pgbackups",
                "pgreplicas"
            ],
            "verbs": [
                "*"
            ]
        },
        {
            "apiGroups": [
                "apps"
            ],
            "resources": [
                "deployments"
            ],
            "verbs": [
                "*"
            ]
        },
        {
            "apiGroups": [
                ""
            ],
            "resources": [
                "secrets",
                "pods",
                "configmaps",
                "pods/exec",
                "pods/log",
                "services",
                "replicasets",
                "endpoints",
                "persistentvolumeclaims"
            ],
            "verbs": [
                "*"
            ]
        },
        {
            "apiGroups": [
                ""
            ],
            "resources": [
                "nodes",
                "storageclasses"
            ],
            "verbs": [
                "get",
                "list"
            ]
        },
        {
            "apiGroups": [
                "batch"
            ],
            "resources": [
                "jobs"
            ],
            "verbs": [
                "*"
            ]
        }
    ]
}
