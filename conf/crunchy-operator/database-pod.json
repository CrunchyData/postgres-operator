{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "{{.Name}}",
        "labels": {
            "name": "{{.Name}}"
            "crunchy-database": "{{.Name}}"
        }
    },
    "spec": {
        "containers": [{
            "name": "database",
            "image": "crunchydata/crunchy-postgres:{{.CCP_IMAGE_TAG}}",
            "readinessProbe": {
                "exec": {
                    "command": [
                        "/opt/cpm/bin/readiness.sh"
                    ]
                },
                "initialDelaySeconds": 10,
                "timeoutSeconds": 1
            },
            "livenessProbe": {
                "exec": {
                    "command": [
                        "/opt/cpm/bin/liveness.sh"
                    ]
                },
                "initialDelaySeconds": 70,
                "timeoutSeconds": 1
            },

            "ports": [{
                "containerPort": {{.Port}},
                "protocol": "TCP"
            }],
            "env": [{
                "name": "PG_MASTER_USER",
                "value": "{{.PG_MASTER_USER}}"
            }, {
                "name": "PGHOST",
                "value": "/tmp"
            }, {
                "name": "PG_MODE",
                "value": "master"
            }, {
                "name": "PG_MASTER_PASSWORD",
                "value": "{{.PG_MASTER_PASSWORD}}"
            }, {
                "name": "PG_USER",
                "value": "{{.PG_USER}}"
            }, {
                "name": "PG_PASSWORD",
                "value": "{{.PG_PASSWORD}}"
            }, {
                "name": "PG_DATABASE",
                "value": "{{.PG_DATABASE}}"
            }, {
                "name": "PG_ROOT_PASSWORD",
                "value": "{{.PG_ROOT_PASSWORD}}"
            }],
            "volumeMounts": [{
                "mountPath": "/pgdata",
                "name": "pgdata",
                "readOnly": false
            }, {
                "mountPath": "/backup",
                "name": "backup",
                "readOnly": true
            }]
        }],
        "volumes": [{
            "name": "pgdata",
            "emptyDir": {}
        }, {
            "name": "backup",
            "emptyDir": {}
        }]
    }
}
