{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "{{.Name}}",
        "labels": {
            "vendor": "crunchydata",
            "pg-cluster": "{{.ClusterName}}",
            "name": "{{.Name}}"
        }
    },
    "spec": {
        "ports": [
    {
         "name": "postgres",
            "protocol": "TCP",
            "port": {{.Port}},
            "targetPort": {{.Port}},
            "nodePort": 0
        }, {
         "name": "node-exporter",
    "protocol": "TCP",
    "port": 9100,
    "targetPort": 9100,
    "nodePort": 0
    }, {
    "name": "pgbadger",
    "protocol": "TCP",
    "port": {{.PGBadgerPort}},
    "targetPort": {{.PGBadgerPort}},
    "nodePort": 0
    }, {
    "name": "sshd",
    "protocol": "TCP",
    "port": 2022,
    "targetPort": 2022,
    "nodePort": 0
    }, {
    "name": "postgres-exporter",
    "protocol": "TCP",
    "port": {{.ExporterPort}},
    "targetPort": {{.ExporterPort}},
    "nodePort": 0
    }
    ],
        "selector": {
            "service-name": "{{.ServiceName}}"
        },
        "type": "{{.ServiceType}}",
        "sessionAffinity": "None"
    }
}
