{
    "kind": "Deployment",
    "apiVersion": "extensions/v1beta1",
    "metadata": {
        "name": "{{.Name}}",
        "labels": {
            "name": "{{.Name}}",
            "pg-cluster": "{{.ClusterName}}"
        }
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "matchLabels": {
                "name": "{{.Name}}"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "name": "{{.Name}}",
                    "pg-cluster": "{{.ClusterName}}"
                }
            },
            "spec": {

	    	{{.SECURITY_CONTEXT}}

                "containers": [{
                    "name": "database",
                    "image": "crunchydata/crunchy-postgres:{{.CCP_IMAGE_TAG}}",
                    "env": [{
                        "name": "PG_MASTER_PORT",
                        "value": "{{.Port}}"
                    }, {
                        "name": "PG_MODE",
                        "value": "master"
                    }, {
                        "name": "PGDATA_PATH_OVERRIDE",
                        "value": "{{.PGDATA_PATH_OVERRIDE}}"
                    }, {
                        "name": "PG_MASTER_USER",
                        "value": "{{.PG_MASTER_USER}}"
                    }, {
                        "name": "PG_MASTER_PASSWORD",
                        "value": "{{.PG_MASTER_PASSWORD}}"
                    }, {
                        "name": "BACKUP_PATH",
                        "value": "{{.BACKUP_PATH}}"
                    }, {
                        "name": "PG_USER",
                        "value": "{{.PG_USER}}"
                    }, {
                        "name": "PG_PASSWORD",
                        "value": "{{.PG_PASSWORD}}"
                    }, {
                        "name": "PG_DATABASE",
                        "value": "{{.PG_DATABASE}}"
                    }, {
                        "name": "PG_ROOT_PASSWORD",
                        "value": "{{.PG_ROOT_PASSWORD}}"
                    }, {
                        "name": "PGHOST",
                        "value": "/tmp"
                    }],
                    "volumeMounts": [
		    {
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    },
		    {
                        "mountPath": "/backup",
                        "name": "backup",
                        "readOnly": true
                    }
		    ],

                    "ports": [{
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }],
                    "resources": {},
                    "imagePullPolicy": "IfNotPresent"
                }],
                "volumes": [
		{
                    "name": "pgdata",
                    "persistentVolumeClaim": {
                        "claimName": "{{.PVC_NAME}}"
                    }
                },
		{
                    "name": "backup",
                    "persistentVolumeClaim": {
                        "claimName": "{{.BACKUP_PVC_NAME}}"
                    }
                }
		],

                "restartPolicy": "Always",
                "dnsPolicy": "ClusterFirst"
            }
        },
        "strategy": {
            "type": "RollingUpdate",
            "rollingUpdate": {
                "maxUnavailable": 1,
                "maxSurge": 1
            }
        }
    }
}
