{
    "apiVersion": "batch/v1",
    "kind": "Job",
    "metadata": {
        "name": "{{.JobName}}",
	"labels": {
        	"vendor": "crunchydata",
               	"pgrmdata": "true",
		"pg-cluster": "{{.ClusterName}}"
	}
    },
    "spec": {
	"backoffLimit": 0,
        "template": {
            "metadata": {
                "name": "{{.JobName}}",
                "labels": {
                    "vendor": "crunchydata",
                    "pgrmdata": "true",
                    "pg-cluster": "{{.ClusterName}}",
                    "claimName": "{{.PvcName}}"
                }
            },
            "spec": {
		"serviceAccountName": "pgo-target",

        {{.SecurityContext}}

                "containers": [{
                    "name": "rmdata",
                    "image": "{{.PGOImagePrefix}}/pgo-rmdata:{{.PGOImageTag}}",
		    {{.ContainerResources }}
                    "env": [{
                        "name": "PG_CLUSTER",
                        "value": "{{.PG_CLUSTER}}"
                    }, {
                        "name": "REMOVE_DATA",
                        "value": "{{.REMOVE_DATA}}"
                    }, {
                        "name": "REMOVE_BACKUP",
                        "value": "{{.REMOVE_BACKUP}}"
                    }, {
                        "name": "NAMESPACE",
			"valueFrom": {
				"fieldRef": {
					"fieldPath": "metadata.namespace"
				}
			}
                    }]
                }],
                "restartPolicy": "Never"
            }
        }
    }
}
