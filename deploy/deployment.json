{
    "apiVersion": "extensions/v1beta1",
    "kind": "Deployment",
    "metadata": {
        "name": "postgres-operator"
    },
    "spec": {
        "replicas": 1,
        "template": {
            "metadata": {
                "labels": {
                    "name": "postgres-operator"
                }
            },
            "spec": {
	        "serviceAccountName": "postgres-operator",
                "containers": [{
                    "name": "apiserver",
                    "image": "$CO_IMAGE_PREFIX/pgo-apiserver:$CO_IMAGE_TAG",
                    "imagePullPolicy": "IfNotPresent",
                    "ports": [{
                        "containerPort": 8443
                    }],
                    "env": [{
                        "name": "CRUNCHY_DEBUG",
                        "value": "true"
                    }, {
                        "name": "PORT",
                        "value": "8443"
                    }, {
                        "name": "TLS_NO_VERIFY",
                        "value": "false"
                    }],
                    "volumeMounts": [{
                        "mountPath": "/config",
                        "name": "apiserver-conf",
                        "readOnly": true
                    }, {
                        "mountPath": "/operator-conf",
                        "name": "operator-conf",
                        "readOnly": true
                    }]
                }, {
                    "name": "operator",
                    "image": "$CO_IMAGE_PREFIX/postgres-operator:$CO_IMAGE_TAG",
                    "imagePullPolicy": "IfNotPresent",
                    "env": [{
                        "name": "CCP_IMAGE_PREFIX",
                        "value": "crunchydata"
                    }, {
                        "name": "CO_IMAGE_PREFIX",
                        "value": "crunchydata"
                    }, {
                        "name": "CO_IMAGE_TAG",
                        "value": "$CO_IMAGE_TAG"
                    }, {
                        "name": "CRUNCHY_DEBUG",
                        "value": "true"
                    }, {
                        "name": "NAMESPACE",
                        "valueFrom": {
                            "fieldRef": {
                                "fieldPath": "metadata.namespace"
                            }
                        }
                    }, {
                        "name": "MY_POD_NAME",
                        "valueFrom": {
                            "fieldRef": {
                                "fieldPath": "metadata.name"
                            }
                        }
                    }],
                    "volumeMounts": [{
                        "mountPath": "/operator-conf",
                        "name": "operator-conf",
                        "readOnly": true
                    }]
                }],
                "volumes": [{
                    "name": "operator-conf",
                    "configMap": {
                        "name": "operator-conf"
                    }
                }, {
                    "name": "apiserver-conf",
                    "configMap": {
                        "name": "apiserver-conf"
                    }
                }]
            }
        }
    }
}
