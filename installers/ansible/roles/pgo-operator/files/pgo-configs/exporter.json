{
    "name": "exporter",
    "image": "{{.PGOImagePrefix}}/crunchy-postgres-exporter:{{.PGOImageTag}}",
    "securityContext": {
      "allowPrivilegeEscalation": false,
      "readOnlyRootFilesystem": true
    },
    "ports": [{
        "containerPort": {{.ExporterPort}},
        "protocol": "TCP"
    }],
    {{.ContainerResources }}
    "env": [
        {
            "name": "EXPORTER_PG_HOST",
            "value": "127.0.0.1"
        },
        {
            "name": "EXPORTER_PG_PORT",
            "value": "{{.PgPort}}"
        },
        {
            "name": "EXPORTER_PG_DATABASE",
            "value": "postgres"
        },
        {
            "name": "EXPORTER_PG_PARAMS",
            "value": {{ if .TLSOnly }}"sslmode=require"{{ else }}"sslmode=disable"{{ end }}
        },
        {
            "name": "JOB_NAME",
            "value": "{{.JobName}}"
        },
        {
            "name": "POSTGRES_EXPORTER_PORT",
            "value": "{{.ExporterPort}}"
        },
        {
            "name": "EXPORTER_PG_USER",
            "valueFrom": {
              "secretKeyRef": {
                  "name": "{{.ExporterSecretName}}",
                  "key": "username"
              }
            }
          },
          {
            "name": "EXPORTER_PG_PASSWORD",
            "valueFrom": {
              "secretKeyRef": {
                  "name": "{{.ExporterSecretName}}",
                  "key": "password"
              }
            }
          }
    ],
    "volumeMounts": [
      {
        "mountPath": "/tmp",
        "name": "tmp"
      }
    ]
}
