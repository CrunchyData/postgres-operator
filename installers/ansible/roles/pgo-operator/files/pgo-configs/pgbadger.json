{
    "name": "pgbadger",
    "image": "{{.CCPImagePrefix}}/crunchy-pgbadger:{{.CCPImageTag}}",
    "securityContext": {
        "allowPrivilegeEscalation": false,
        "readOnlyRootFilesystem": true
    },
    "ports": [ {
            "containerPort": {{.PGBadgerPort}},
            "protocol": "TCP"
        }
    ],
    "readinessProbe": {
        "tcpSocket": {
            "port": {{.PGBadgerPort}}
        },
        "initialDelaySeconds": 20,
        "periodSeconds": 10
    },
    "env": [ {
        "name": "BADGER_TARGET",
        "value": "{{.BadgerTarget}}"
    }, {
        "name": "PGBADGER_SERVICE_PORT",
        "value": "{{.PGBadgerPort}}"
    } ],
    "resources": {
      "limits": {
        "cpu": "500m",
        "memory": "64Mi"
      }
    },
    "volumeMounts": [
        {
            "mountPath": "/tmp",
            "name": "tmp"
        },
        {
            "mountPath": "/pgdata",
            "name": "pgdata",
            "readOnly": true
        },
        {
            "mountPath": "/report",
            "name": "report",
            "readOnly": false
        }
    ]
}
