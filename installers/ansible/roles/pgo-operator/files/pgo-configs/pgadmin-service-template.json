{
  "kind": "Service",
  "apiVersion": "v1",
  "metadata": {
      "name": "{{.Name}}",
      "labels": {
          {{ if .CustomLabels }}
          {{ .CustomLabels }}
          {{ end }}
          "vendor": "crunchydata",
          "name": "{{.Name}}",
          "pgadmin": "true",
          "pg-cluster": "{{.ClusterName}}"
      }
  },
  "spec": {
      "ports": [{
          "protocol": "TCP",
          "port": {{.Port}},
          "targetPort": {{.Port}},
          "nodePort": 0
      }],
      "selector": {
          "name": "{{.Name}}"
      },
      "type": "ClusterIP",
      "sessionAffinity": "None"
  }
}
