{
    "kind": "PersistentVolumeClaim",
    "apiVersion": "v1",
    "metadata": {
        "name": "{{.Name}}",
        "labels": {
            "vendor": "crunchydata",
            "pg-cluster": "{{.ClusterName}}"
        }
    },
    "spec": {

    {{.MatchLabels}}

        "accessModes": [
            "{{.AccessMode}}"
        ],
        "resources": {
            "requests": {
                "storage": "{{.Size}}"
            }
        }
    }
}
