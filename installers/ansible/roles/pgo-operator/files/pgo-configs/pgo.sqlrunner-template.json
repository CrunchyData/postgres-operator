{
    "apiVersion": "batch/v1",
    "kind": "Job",
    "metadata": {
        "name": "{{.JobName}}",
        "labels": {
            "vendor": "crunchydata",
            "pgo-sqlrunner": "true",
            "pg-cluster": "{{.ClusterName}}"
        }
    },
    "spec": {
        "template": {
            "metadata": {
                "name": "{{.JobName}}",
                "labels": {
                    "vendor": "crunchydata",
                    "pgo-sqlrunner": "true",
                    "pg-cluster": "{{.ClusterName}}"
                }
            },
            "spec": {
                "serviceAccountName": "pgo-default",
                "securityContext": {
                  "runAsNonRoot": true
                },
                {{ if .Tolerations }}
                "tolerations": {{ .Tolerations }},
                {{ end }}
                "containers": [
                    {
                        "name": "sqlrunner",
                        "image": "{{.CCPImagePrefix}}/crunchy-postgres-ha:{{.CCPImageTag}}",
                        "securityContext": {
                          "allowPrivilegeEscalation": false,
                          "readOnlyRootFilesystem": true
                        },
                        "command": ["/opt/crunchy/bin/uid_postgres.sh"],
                        "args": ["/opt/crunchy/bin/start.sh"],
                        "env": [
                            {
                                "name": "MODE",
                                "value": "sqlrunner"
                            },
                            {
                                "name": "PG_HOST",
                                "value": "{{.PGHost}}"
                            },
                            {
                                "name": "PG_PORT",
                                "value": "{{.PGPort}}"
                            },
                            {
                                "name": "PG_DATABASE",
                                "value": "{{.PGDatabase}}"
                            },
                            {
                                "name": "PG_USER",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "name": "{{.PGUserSecret}}",
                                        "key": "username"
                                    }
                                }
                            },
                            {
                                "name": "PG_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "name": "{{.PGUserSecret}}",
                                        "key": "password"
                                    }
                                }
                            }
                        ],
                        "volumeMounts": [
                            {
                                "mountPath": "/pgconf",
                                "name": "pgconf",
                                "readOnly": true
                            }
                        ]
                    }
                ],
                "volumes": [
                    {
                        "name": "pgconf",
                        "configMap": {
                            "name": "{{.PGSQLConfigMap}}"
                        }
                    }
                ],
                "restartPolicy": "Never"
            }
        }
    }
}
