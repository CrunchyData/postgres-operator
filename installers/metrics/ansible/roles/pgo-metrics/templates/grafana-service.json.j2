{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "{{ grafana_service_name }}",
        "labels": {
            "name": "{{ grafana_service_name }}",
            "app.kubernetes.io/name": "{{ app_name }}"
        }
    },
    "spec": {
        "ports": [
            {
                "name": "grafana",
                "protocol": "TCP",
                "port": {{ grafana_port }},
                "targetPort": {{ grafana_port }}
            }
        ],
        "selector": {
            "name": "{{ grafana_service_name }}"
        },
        "type": "{{ grafana_service_type }}",
        "sessionAffinity": "None"
    }
}
