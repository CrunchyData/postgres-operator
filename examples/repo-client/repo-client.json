{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "repo-client",
            "labels": {
                "name": "repo-client"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 2022,
                "targetPort": 2022,
                "nodePort": 0
            }],
            "selector": {
                "name": "repo-client"
            },
            "type": "ClusterIP",
            "sessionAffinity": "None"
        }
}

{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "repo-client",
        "namespace": "$CO_NAMESPACE",
        "labels": {
            "name": "repo-client"
        }
    },
    "spec": {
        "securityContext": {
        },
        "containers": [
            {
                "name": "repo-client",
                "image": "$CO_IMAGE_PREFIX/repo-client:$CO_IMAGE_TAG",
                "ports": [
                    {
                        "containerPort": 2022,
                        "protocol": "TCP"
                    }
                ],
                "env": [
                    {
                        "name": "PG_PRIMARY_USER",
                        "value": "repo-clientuser"
                    },
                    {
                        "name": "PG_PRIMARY_PORT",
                        "value": "5432"
                    },
                    {
                        "name": "PG_MODE",
                        "value": "repo-client"
                    },
                    {
                        "name": "PG_PRIMARY_PASSWORD",
                        "value": "password"
                    },
                    {
                        "name": "PG_USER",
                        "value": "testuser"
                    },
                    {
                        "name": "PG_PASSWORD",
                        "value": "password"
                    }
                ],
                "volumeMounts": [
                    {
                        "mountPath": "/sshd",
                        "name": "sshd",
                        "readOnly": true
                    },
                    {
                        "mountPath": "/backrestrepo",
                        "name": "backrestrepo",
                        "readOnly": false
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "backrestrepo",
                "persistentVolumeClaim": {
                    "claimName": "repo-client"
                }
            },
            {
                "name": "sshd",
		 "secret": {
			"secretName": "pgo-backrest-repo-config",
			"defaultMode": 511
		}

            }
        ]
    }
}
