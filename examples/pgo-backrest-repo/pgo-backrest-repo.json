{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "pgo-backrest-repo",
        "namespace": "$CO_NAMESPACE",
        "labels": {
            "name": "pgo-backrest-repo"
        }
    },
    "spec": {
        "securityContext": {
        },
        "containers": [
            {
                "name": "pgo-backrest-repo",
                "image": "$CO_IMAGE_PREFIX/pgo-backrest-repo:$CO_IMAGE_TAG",
                "ports": [
                    {
                        "containerPort": 2022,
                        "protocol": "TCP"
                    }
                ],
                "env": [
                    {
                        "name": "PGBACKREST_STANZA",
                        "value": "db"
                    },
                    {
                        "name": "SSHD_PORT",
                        "value": "2022"
                    },
                    {
                        "name": "PGBACKREST_DB_PATH",
                        "value": "/pgdata/primary"
                    },
                    {
                        "name": "PGBACKREST_DB_HOST",
                        "value": "primary"
                    },
                    {
                        "name": "PGBACKREST_REPO_PATH",
                        "value": "/backrestrepo/pgo-backrest-repo"
                    },
                    {
                        "name": "PGBACKREST_LOG_PATH",
                        "value": "/tmp"
                    }
                ],
                "volumeMounts": [
                    {
                        "mountPath": "/sshd",
                        "name": "sshd",
                        "readOnly": true
                    },
                    {
                        "mountPath": "/backrestrepo",
                        "name": "backrestrepo",
                        "readOnly": false
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "backrestrepo",
                "persistentVolumeClaim": {
                    "claimName": "pgo-backrest-repo"
                }
            },
            {
                "name": "sshd",
		 "secret": {
			"secretName": "pgo-backrest-repo-config",
			"defaultMode": 511
		}

            }
        ]
    }
}
