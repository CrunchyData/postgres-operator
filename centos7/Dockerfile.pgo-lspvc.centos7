FROM centos:7

LABEL Vendor="Crunchy Data Solutions" \
	Version="7.6" \
	Release="4.0.1" \
	summary="Crunchy Data PostgreSQL Operator - Display PVC" \
	description="Crunchy Data PostgreSQL Operator - Display contents of a PVC"

