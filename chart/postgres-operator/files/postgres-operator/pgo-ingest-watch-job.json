{
    "apiVersion": "extensions/v1beta1",
    "kind": "Deployment",
    "metadata": {
        "name": "{{.Name}}"
    },
    "spec": {
        "replicas": 1,
        "template": {
            "metadata": {
                "labels": {
                    "name": "{{.Name}}"
                }
            },
            "spec": {

        {{.SecurityContext }}

                "serviceAccountName": "pgo-ingest-watch",
                "containers": [{
                    "name": "watch",
                    "image": "{{.COImagePrefix}}/pgo-ingest-watch:{{.COImageTag}}",
                    "imagePullPolicy": "IfNotPresent",
                    "env": [{
                        "name": "CO_IMAGE_PREFIX",
                        "value": "{{.COImagePrefix}}"
                    }, {
                        "name": "INGEST_NAME",
                        "value": "{{.Name}}"
                    }, {
                        "name": "INGEST_PVC_NAME",
                        "value": "{{.PvcName}}"
                    }, {
                        "name": "CO_IMAGE_TAG",
                        "value": "{{.COImageTag}}"
                    }, {
                        "name": "WATCH_DIR",
                        "value": "{{.WatchDir}}"
                    }, {
                        "name": "DB_HOST",
                        "value": "{{.DBHost}}"
                    }, {
                        "name": "DB_PORT",
                        "value": "{{.DBPort}}"
                    }, {
                        "name": "DB_NAME",
                        "value": "{{.DBName}}"
                    }, {
                        "name": "DB_SECRET",
                        "value": "{{.DBSecret}}"
                    }, {
                        "name": "DB_TABLE",
                        "value": "{{.DBTable}}"
                    }, {
                        "name": "DB_COLUMN",
                        "value": "{{.DBColumn}}"
                    }, {
                        "name": "MAX_JOBS",
                        "value": "{{.MaxJobs}}"
                    }, {
                        "name": "CRUNCHY_DEBUG",
                        "value": "true"
                    }, {
                        "name": "NAMESPACE",
                        "valueFrom": {
                            "fieldRef": {
                                "fieldPath": "metadata.namespace"
                            }
                        }
                    }],
                    "volumeMounts": [{
                        "mountPath": "/watchdir",
                        "name": "watchdir",
                        "readOnly": false
                    }, {
                        "mountPath": "/config",
                        "name": "config",
                        "readOnly": true
                    }]
                }],
                "volumes": [{
                    "name": "watchdir",
                    "persistentVolumeClaim": {
                        "claimName": "{{.PvcName}}"
                    }
                }, {
                    "name": "config",
                    "configMap": {
                        "name": "pgo-ingest-watch-config"
                    }
                }]
            }
        }
    }
}
